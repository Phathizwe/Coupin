rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Simplified business access check
    function hasBusinessAccess(businessId) {
      return isAuthenticated() && (
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.businessId == businessId ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.currentBusinessId == businessId ||
        businessId in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.businesses
      );
    }

    // Simplified customer ownership check
    function isCustomerOwner(customerId) {
      return isAuthenticated() && (
        get(/databases/$(database)/documents/customers/$(customerId)).data.userId == request.auth.uid
      );
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow create: if isAuthenticated();
      allow update: if isOwner(userId);
      allow delete: if false; // Prevent user deletion
    }
    
    // Businesses collection
    match /businesses/{businessId} {
      allow read: if true; // Allow public read for discovery
      allow create: if isAuthenticated();
      allow update: if hasBusinessAccess(businessId);
      allow delete: if hasBusinessAccess(businessId);
    }
    
    // Customers collection
    match /customers/{customerId} {
      // Allow reading customer records if authenticated
      allow read: if isAuthenticated();
      
      // Allow creating customer records if authenticated
      allow create: if isAuthenticated();
      
      // Allow updating customer records if authenticated
      allow update: if isAuthenticated();
      
      // Allow deleting customer records if user has business access
      allow delete: if isAuthenticated() && hasBusinessAccess(resource.data.businessId);
    }
    
    // Loyalty Programs collection
    match /loyaltyPrograms/{programId} {
      allow read: if true; // Allow public read for discovery
      allow create, update, delete: if isAuthenticated() && hasBusinessAccess(request.resource.data.businessId);
    }
    
    // Loyalty Members collection
    match /loyaltyMembers/{memberId} {
      allow read: if true; // Allow public read for discovery
      allow create, update, delete: if isAuthenticated();
    }
    
    // Coupons collection
    match /coupons/{couponId} {
      allow read: if true; // Allow public read for discovery
      allow create, update, delete: if isAuthenticated() && hasBusinessAccess(request.resource.data.businessId);
    }

    // Customer Coupons collection
    match /customerCoupons/{customerCouponId} {
      // Allow reading customer coupons if authenticated
      allow read: if isAuthenticated();
      
      // Allow creating customer coupons if authenticated
      allow create: if isAuthenticated();
      
      // Allow updating/deleting customer coupons if authenticated
      allow update, delete: if isAuthenticated();
    }
    
    // Coupon Distributions collection
    match /couponDistributions/{distributionId} {
      allow read, write: if isAuthenticated();
    }
    
    // Savings Events collection
    match /savingsEvents/{eventId} {
      allow read, write: if isAuthenticated();
    }
    
    // Redemptions collection
    match /redemptions/{redemptionId} {
      allow read, write: if isAuthenticated();
    }
    
    // Savings Goals collection
    match /savingsGoals/{goalId} {
      allow read, write: if isAuthenticated();
    }
    
    // Lead Capture collection
    match /leadCapture/{leadId} {
      allow read, write: if isAuthenticated();
    }
    
    // All other collections - default rules
    match /{document=**} {
      allow read, write: if isAuthenticated();
    }
  }
}