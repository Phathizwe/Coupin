rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Common function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Regional settings collections - allow public read access
    match /currencies/{currencyId} {
      allow read: if true; // Public currencies are readable by anyone
      allow write: if isAuthenticated() && request.auth.token.admin == true;
    }
    
    match /regions/{regionId} {
      allow read: if true; // Public regions are readable by anyone
      allow write: if isAuthenticated() && request.auth.token.admin == true;
    }
    
    match /userRegionalPreferences/{userId} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Business profiles
    match /businesses/{businessId} {
      allow read: if true; // Public business profiles are readable by anyone
      allow write: if isAuthenticated() && request.auth.uid == businessId; // Using the check directly
    }
    
    // Customers collection (top-level)
    match /customers/{customerId} {
      allow read, write: if isAuthenticated();
    }
    
    // Coupons collection (top-level)
    match /coupons/{couponId} {
      allow read: if true; // Public coupons are readable
      allow write: if isAuthenticated();
    }
    
    // Pricing plans - allow public read access
    match /pricing_plans/{planId} {
      allow read: if true; // Public pricing plans are readable by anyone
      allow write: if isAuthenticated() && request.auth.token.admin == true;
    }
    
    // Loyalty programs (top-level)
    match /loyaltyPrograms/{programId} {
      allow read: if true; // Public loyalty programs are readable
      allow write: if isAuthenticated();
    }
    
    // Loyalty rewards (top-level)
    match /loyaltyRewards/{rewardId} {
      allow read, write: if isAuthenticated();
    }
    
    // Redemptions (top-level)
    match /redemptions/{redemptionId} {
      allow read, write: if isAuthenticated();
    }
    
    // Customer coupon collection (top-level)
    match /customerCoupons/{couponId} {
      allow read, write: if isAuthenticated();
    }
    
    // Message templates
    match /messageTemplates/{templateId} {
      allow read, write: if isAuthenticated();
    }
    
    // Communication campaigns
    match /campaigns/{campaignId} {
      allow read, write: if isAuthenticated();
  }
    
    // Communication channels
    match /communicationChannels/{channelId} {
      allow read, write: if isAuthenticated();
}
    
    // Analytics data
    match /analytics/{document=**} {
      allow read, write: if isAuthenticated();
    }
    
    // Allow access to all subcollections for authenticated users
    match /{document=**} {
      allow read, write: if isAuthenticated();
    }
  }
}